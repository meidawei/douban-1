/* pages/bookInfo/info.wxss */

/* 滚动组件 */
.scoller {
    margin: 0;
}


/* 设置封面显示 */
.cover {
    position: relative;
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    align-content: center;
}
.cover-bg {     /* 设置虚化背景 */
    position: absolute;
    width: 100%;
    height: 100%;
    background-size: cover;
}
.cover-img {
    position: absolute;
    width: 350rpx;
    height: 500rpx;
    margin-top: 50rpx;
}

/* 设置书信息显示 */
.info {
    height: 350rpx;
    display: flex;
    margin: 0 0 30rpx;
}
.info-text {
    width: 400rpx;
    padding: 40rpx 10rpx 0 40rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.info-text-title {
    margin-bottom: 20rpx;
    font-size: 55 rpx;
    font-weight: bold;
}
.info-text-author {
    font-size: 30rpx;
    margin-bottom: 10rpx;
}
.info-text-publish {
    font-size: 30rpx;
    margin-bottom: 10rpx;
}
.info-text-publishDate {
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

.info-tags {
    margin: 20rpx 0rpx;
}
.info-tags text{
    position: relative;
    border: 4rpx solid silver;
    color: orange;
    padding: 10rpx 10rpx;
    margin: 0 15rpx 0 0;
}

.info-star {
    width: 230rpx;
    height: 220rpx;
    margin: 50rpx 50rpx 0;
    box-shadow: 0 0 20rpx 20rpx rgba(0, 0, 0, 0.1)
}
.info-star-counts {
    margin-top: 50rpx;
    margin-bottom: 30rpx;
    font-size: 60rpx;
    display: flex;
    justify-content: center;
}
.info-star-img {
    margin-left: 10rpx;
    width: 200rpx;
    height: 35rpx;
}


/* 设置图书简介显示样式 */
.content {
    padding: 20rpx;
    display: flex;
    flex-wrap: wrap;
}
.content-tip {
    color: green;
    padding: 20rpx;
}
.content-text {
    color: dimgray;
    padding: 20rpx;
    line-height: 50rpx;
    height: 500rpx;
}